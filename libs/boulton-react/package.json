{
  "name": "@boulton/react",
  "version": "0.0.3",
  "description": "Use Boulton with React",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "Boulton Labs",
  "license": "MIT",
  "scripts": {
    "compile": "rm -rf dist/* && tsc -p tsconfig.pkg.json",
    "compile-watch": "tsc -p tsconfig.pkg.json --watch",
    "test": "vitest run",
    "test-watch": "vitest watch",
    "coverage": "vitest run --coverage",
    "prepack": "yarn run test && yarn run compile"
  },
  "dependencies": {
    "@boulton/disposable-types": "0.0.3",
    "@boulton/react-disposable-state": "../../libs/boulton-react-disposable-state/",
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.31",
    "react-test-renderer": "^18.2.0",
    "vitest": "^0.29.8",
    "typescript": "^5.0.3"
  }
}
